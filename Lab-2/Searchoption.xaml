<UserControl x:Class="Lab_2.Searchoption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <DataGrid x:Name="resultGrid" Margin="0,40,0,0"></DataGrid>
        <Label x:Name="lblSearch" Content="Enter Your Name" HorizontalAlignment="Left" Margin="26,9,0,0" VerticalAlignment="Top" Width="128"/>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Height="23" Margin="183,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtID_TextChanged"/>
    </Grid>
</UserControl>
